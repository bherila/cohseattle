@model Dinamico.Models.ContentPart

@{ Content.Define(re =>
	{
		re.Title = "MiniGutter";
        re.Image("Image");
        re.FreeText("Text");
    });
}
<div class="container-fluid">
<div class="row-fluid">
    <div class="span8">
        @{ Html.DroppableZone("AboveText").Render(); }
        @Content.Render.Tokens("Text").Wrap(@<div id="content">@item.RenderContents()</div>)
        @{ Html.DroppableZone("BelowText").Render(); }
    </div>
    <div class="span4">
        @if (Content.Has.Image) {
            @Content.Render.Image("Image")
        }
        @{ Html.DroppableZone("Gutter").Render(); }
    </div>
</div>
</div>